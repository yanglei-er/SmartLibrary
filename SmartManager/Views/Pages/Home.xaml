<Page
    x:Class="SamrtManager.Views.Pages.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SamrtManager.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance local:Home,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="630"
    d:DesignWidth="900"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" CornerRadius="8,0,0,0">
            <Border.Background>
                <ImageBrush
                    ImageSource="pack://application:,,,/Assets/background.jpg"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Stretch="UniformToFill" />
            </Border.Background>
            <Grid>
                <Border>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.6,0.6" EndPoint="1,1">
                            <GradientStop Offset="0" Color="Transparent" />
                            <GradientStop Offset="2" Color="#E53B0084" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <StackPanel
                    Margin="48,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <ui:TextBlock
                        FontSize="48"
                        FontTypography="TitleLarge"
                        Foreground="#FFFFFF"
                        Text="智慧管理员">
                        <ui:TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="12"
                                Direction="240"
                                ShadowDepth="4" />
                        </ui:TextBlock.Effect>
                    </ui:TextBlock>
                    <ui:TextBlock
                        FontTypography="Subtitle"
                        Foreground="#FFFFFF"
                        Text="Adjust the settings intelligently">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Direction="240"
                                ShadowDepth="3" />
                        </TextBlock.Effect>
                    </ui:TextBlock>
                    <ui:TextBlock
                        FontSize="16"
                        FontTypography="BodyStrong"
                        Foreground="#FFFFFF"
                        Text="by using Smart Manage System everywhere.">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Direction="240"
                                ShadowDepth="3" />
                        </TextBlock.Effect>
                    </ui:TextBlock>
                </StackPanel>
                <ui:TextBlock
                    Margin="0,0,12,8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    FontTypography="Caption"
                    Foreground="#57FFFFFF"
                    Text="Created by Zhao Yanglei" />
            </Grid>
        </Border>
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ui:CardAction
                Grid.Column="0"
                Margin="0,0,4,0"
                Padding="0"
                VerticalAlignment="Stretch"
                Command="{Binding ViewModel.CardClickCommand, Mode=OneWay}"
                CommandParameter="Face"
                IsChevronVisible="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:Image
                        Width="65"
                        Height="65"
                        Margin="24,0,0,0"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="pack://application:,,,/Assets/face-scan.png"
                        Stretch="UniformToFill" />
                    <ui:TextBlock
                        Grid.Column="1"
                        Margin="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="人脸识别管理" />
                </Grid>
            </ui:CardAction>
            <ui:CardAction
                Grid.Column="1"
                Margin="8,0,4,0"
                Padding="0"
                VerticalAlignment="Stretch"
                Command="{Binding ViewModel.CardClickCommand, Mode=OneWay}"
                CommandParameter="RFID"
                IsChevronVisible="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:Image
                        Width="60"
                        Height="60"
                        Margin="24,0,0,0"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="pack://application:,,,/Assets/rfid.png"
                        Stretch="UniformToFill" />
                    <ui:TextBlock
                        Grid.Column="1"
                        Margin="14"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="RFID管理" />
                </Grid>
            </ui:CardAction>
            <ui:CardAction
                Grid.Column="2"
                Margin="8,0,0,0"
                Padding="0"
                VerticalAlignment="Stretch"
                Command="{Binding ViewModel.CardClickCommand, Mode=OneWay}"
                CommandParameter="Settings"
                IsChevronVisible="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:Image
                        Width="60"
                        Height="60"
                        Margin="24,0,0,0"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Shared;Component/Assets/homeSetting.png"
                        Stretch="UniformToFill" />
                    <ui:TextBlock
                        Grid.Column="1"
                        Margin="12"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="设置" />
                </Grid>
            </ui:CardAction>
        </Grid>
    </Grid>
</Page>
